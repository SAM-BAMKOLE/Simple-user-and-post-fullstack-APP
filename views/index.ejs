<%- include('partials/header.ejs') %>
  <%- include('partials/navbar.ejs') %>
  <main>
    <!-- hero -->
    <div class="container">
      <div class="py-5 px-2">
        <h1 class="" style="font-size: 45px">Simple User and Post API</h1>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nostrum tenetur, aliquam consectetur labore dolore perferendis perspiciatis ex aut ab corporis soluta?
